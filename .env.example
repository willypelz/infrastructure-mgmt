# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
# Main domain for your server
DOMAIN=gmcloudworks.org

# Email for Let's Encrypt SSL certificates
SSL_EMAIL=pelumiasefon@gmail.com

# ===========================================
# TRAEFIK CONFIGURATION
# ===========================================
# Traefik dashboard subdomain
TRAEFIK_SUBDOMAIN=traefik

# Traefik dashboard credentials (generate with: htpasswd -nb admin yourpassword)
# Default: admin/admin (CHANGE THIS IN PRODUCTION!)
TRAEFIK_AUTH=admin:$$apr1$$8EVjn/nj$$GiLUZqcbueTFeD23SuB6x0

# Traefik log level (DEBUG, INFO, WARN, ERROR)
TRAEFIK_LOG_LEVEL=INFO

# SSL mode: false for staging, true for production
TRAEFIK_SSL_PRODUCTION=false

# Rate limiting (requests per minute)
RATE_LIMIT_AVERAGE=100
RATE_LIMIT_BURST=50
ADMIN_RATE_LIMIT=20

# ===========================================
# PORTAINER CONFIGURATION
# ===========================================
PORTAINER_SUBDOMAIN=portainer

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
GRAFANA_SUBDOMAIN=grafana
PROMETHEUS_SUBDOMAIN=prometheus
ALERTMANAGER_SUBDOMAIN=alerts

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_secure_password

# Prometheus retention period (days)
PROMETHEUS_RETENTION_DAYS=30

# Loki retention period (days)
LOKI_RETENTION_DAYS=14

# Alert notification email
ALERT_EMAIL=pelumiasefon@gmail.com

# ===========================================
# EXAMPLE APPLICATION SUBDOMAINS
# ===========================================
# WordPress blog
WORDPRESS_SUBDOMAIN=blog

# Node.js Express API
NODEJS_SUBDOMAIN=api

# Flask Python API
FLASK_SUBDOMAIN=app

# React SPA
REACT_SUBDOMAIN=www

# PHP Laravel App
LARAVEL_SUBDOMAIN=shop

# ===========================================
# DATABASE CREDENTIALS
# ===========================================
# MariaDB (WordPress)
WORDPRESS_DB_HOST=wordpress-db
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wpuser
WORDPRESS_DB_PASSWORD=change_this_wp_password
WORDPRESS_DB_ROOT_PASSWORD=change_this_root_password

# PostgreSQL (Node.js API)
POSTGRES_HOST=nodejs-db
POSTGRES_DB=apidb
POSTGRES_USER=apiuser
POSTGRES_PASSWORD=change_this_pg_password

# MySQL (Laravel)
LARAVEL_DB_HOST=laravel-db
LARAVEL_DB_NAME=laravel
LARAVEL_DB_USER=laraveluser
LARAVEL_DB_PASSWORD=change_this_laravel_password
LARAVEL_DB_ROOT_PASSWORD=change_this_laravel_root_password

# Redis (Flask)
REDIS_HOST=flask-redis
REDIS_PASSWORD=change_this_redis_password

# ===========================================
# DIGITALOCEAN SPACES BACKUP CONFIGURATION
# ===========================================
# DigitalOcean Spaces credentials (S3-compatible)
DO_SPACES_KEY=your_spaces_access_key
DO_SPACES_SECRET=your_spaces_secret_key
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=your-backup-bucket
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Backup retention (days)
BACKUP_RETENTION_DAYS=30
DB_BACKUP_RETENTION_DAYS=7

# Backup schedule (cron format)
# Daily full backup at 2 AM UTC
BACKUP_FULL_SCHEDULE="0 2 * * *"
# Hourly database backups
BACKUP_DB_SCHEDULE="0 * * * *"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# IP Whitelist for admin panels (comma-separated, optional)
# Leave empty to allow all IPs
# ADMIN_IP_WHITELIST=1.2.3.4/32,5.6.7.8/32

# Enable DDoS protection
ENABLE_DDOS_PROTECTION=true

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Docker network name for all services
DOCKER_NETWORK=web

# ===========================================
# TIMEZONE
# ===========================================
TZ=UTC
